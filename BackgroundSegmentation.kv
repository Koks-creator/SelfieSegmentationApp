#:import utils kivy.utils
<Grid@GridLayout>:
<MainScreen>:
    container: container

    FloatLayout:
        Image:
            id: vid
            allow_stretch: True
            keep_ratio: True
            pos_hint: {'x':0.0001, 'y': .1}
            size_hint: 1, 1

    Button:
        background_normal: "AppMedias/blurred.png"
        background_down: "AppMedias/blurred2.png"
        pos_hint: {"x": 0.01, "y": 0.9}
        size_hint: 0.06, 0.08
        on_press:
            root.update_blur()

    GridLayout:
        rows: 1
        cols: 3
        font_name: "Calibri"
        size_hint_y: None

        canvas.before:
            Color:
                rgb: utils.get_color_from_hex('#9d4edd')

            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            id: background
            text: "<"
            font_size: 100
            pos_hint: {'x':0.2, 'y': .05}
            size_hint: 0.1, 0.12
            on_press:
                root.change_background_index(0)

        ScrollView:
            size_hint: (.96, 1)
            bar_width: 10
            #bar_color: 1, 0, 0, 1   # red
            #bar_inactive_color: 0, 0, 1, 1   # blue
            effect_cls: "ScrollEffect"
            scroll_type: ['content']
            do_scroll_y: True

            canvas.before:
                Color:
                    rgba: 0, 0, 0, .6
                Rectangle:
                    pos: self.pos
                    size: self.size

            StackLayout:
                id: container
                size_hint_y: None


        Button:
            text: ">"
            font_size: 100
            pos_hint: {'x':0.8, 'y': .05}
            size_hint: 0.1, 0.12
            on_press:
                root.change_background_index(1)
